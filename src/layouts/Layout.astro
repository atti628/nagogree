---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  // デフォルトの説明文
  description = "名古屋大学グリークラブ(なごぐり)は、名古屋大学を拠点に活動する男声合唱団です。初心者歓迎！見学・体験はいつでも募集中です。",
  // デフォルトのOGP画像
  image = "https://placehold.jp/3d4070/ffffff/1200x630.png?text=NagoGlee"
} = Astro.props;

// 本番URL（必要に応じて書き換えてください）
const siteUrl = "https://nagoglee.pages.dev";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="google-site-verification" content="FnYOwgGQ-zy4tL3CIcAAqhKCQphoOp4aFFgpl1YNmzs" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={image} />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700;900&display=swap" rel="stylesheet">
  </head>
  
  <body class="bg-[#FDFBF7] text-gray-800 font-['Noto_Sans_JP'] antialiased">
    
    <div id="splash-screen" class="fixed inset-0 z-[100] flex items-center justify-center bg-black transition-opacity duration-1000">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white tracking-widest animate-pulse">
          NagoGlee
        </h1>
        <p class="text-gray-400 mt-2 text-sm">Official Website</p>
      </div>
    </div>

    <Header /> 

    <main class="min-h-screen">
      <slot />
    </main>

    <Footer />

    <script>
      // --- A. ハンバーガーメニューの処理 ---
      // Header.astro 側に処理を移したので、ここでは削除しました（重複動作を防ぐため）

      // --- B. オープニングアニメーション ---
      window.addEventListener('load', () => {
        const splash = document.getElementById('splash-screen');
        if (!splash) return;

        // セッションストレージを使って「1回見たら次は表示しない」制御
        const visited = sessionStorage.getItem('visited');
        if (visited) {
          splash.style.display = 'none'; // 2回目以降は即座に非表示
        } else {
          sessionStorage.setItem('visited', 'true');
          setTimeout(() => {
            splash.classList.add('opacity-0'); // ふわっと消える
            setTimeout(() => { 
              splash.style.display = 'none'; 
            }, 1000);
          }, 1500); // 1.5秒間表示
        }
      });
      
      // --- C. スクロール監視 (フェードインアニメーション) ---
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('opacity-100', 'translate-y-0');
            entry.target.classList.remove('opacity-0', 'translate-y-10');
          }
        });
      });
      
      // 読み込み完了時に監視を開始
      window.addEventListener('load', () => {
        const targets = document.querySelectorAll('.animate-on-scroll');
        targets.forEach(target => observer.observe(target));
      });
      
    </script>
  </body>
</html>