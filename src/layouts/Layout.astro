---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title} | Nagogree</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class="bg-gray-900 text-gray-100 font-sans antialiased">
    
    <header class="bg-black/50 backdrop-blur-md sticky top-0 border-b 
border-gray-800">
      <nav class="max-w-4xl mx-auto flex gap-6 p-4 font-bold">
        <a href="/" class="hover:text-blue-400 transition-colors">HOME</a>
        <a href="/about" class="hover:text-blue-400 
transition-colors">ABOUT</a>
      </nav>
    </header>

    <main class="max-w-4xl mx-auto p-6 min-h-screen">
      <slot />
    </main>

    <footer class="text-center py-10 text-gray-500 text-sm border-t 
border-gray-800 mt-10">
      &copy; 2025 Nagogree
    </footer>
  </body>
</html>
